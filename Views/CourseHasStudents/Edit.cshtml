@model GraderApp.Models.CourseHasStudent

@{
    ViewData["Title"] = "Edit";
}
<br />
<h1>Assign a Grade for this Course</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseIdCourse" />
            <input type="hidden" asp-for="StudentsRegistrationNumber" />
            <div class="form-group">
                <input asp-for="GradeCourseStudent" class="form-control" />
                <span asp-validation-for="GradeCourseStudent" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
