@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <h6 class="display-4">Login Page</h6>
</div>

<div class="container mt-3">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-9 col-lg-6 col-xl-3">
    <form action="">
        <div class="form-group">
            <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username"><br>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password"><br>
        </div>
                <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary" style="padding-left: 2rem; padding-right: 2rem;" asp-area="" asp-controller="Users" asp-action="UserCheck">Sign In</button>
        </div>
    </form>
    </div>
    </div>
</div>
<br />
<h2 class="col-md-12 text-center">@ViewBag.success</h2>
