@model GraderApp.Models.Course

@{
    ViewData["Title"] = "Assign AFM";
}
<br />
<h1>Assign the Selected Course to a Professor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCourse" />
            <div class="form-group">
                <label asp-for="CourseTitle" class="control-label"></label>
                <input asp-for="CourseTitle" readonly class="form-control" />
                <span asp-validation-for="CourseTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseSemester" class="control-label"></label>
                <input asp-for="CourseSemester" readonly class="form-control" />
                <span asp-validation-for="CourseSemester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorsAfm" class="control-label"></label>
                <select asp-for="ProfessorsAfm" class="form-control" asp-items="ViewBag.ProfessorsAfm"></select>
                <span asp-validation-for="ProfessorsAfm" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
